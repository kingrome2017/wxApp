.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-data {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-img {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-text {
  vertical-align: middle;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10px;
  font-weight: blod;
  margin-left: 10rpx;
}

.post-image {
  width: 100%;
  margin-left: 16rpx;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 30rpx;
  margin-left: 10rpx;
}

.post-like-img {
  width: 23rpx;
  height: 23rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.post-like-num {
  vertical-align: middle;
  margin-right: 10rpx;
}
