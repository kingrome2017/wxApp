@import "../startsTemplate/start.wxss";
.movieDetailsContainer{
    display: flex;
    flex-direction: column
}
.movieImg{
    width:100%;
    height:320rpx;
    -webkit-filter: blur(20rpx);
}
.head-img-hover{
    width:100%;
    height:320rpx;
    position: absolute;
    left:0;
    top:0;
    display: flex;
    flex-direction: column;
}
.main-title{
    font-size: 19px;
    color:#fff;
    font-weight: blod;
    margin:50rpx 0 0 40rpx;
    letter-spacing: 2px;
}
.sub-title{
    font-size: 28rpx;
    color:#fff;
    margin: 30rpx 0 0 40rpx;
}
.like{
    display:flex;
    flex-direction: row;
    margin: 30rpx 0 0 40rpx;
}
.highlight-font,.plain-font{
    color:#f21146;
    font-size:22rpx;
    margin-right:30rpx; 
}
.plain-font{
    color:#666;
}
.movie-img{
    width:175rpx;
    height:238rpx;
    position: absolute;
    top:160rpx;
    right:30rpx;
}
.summary{
    margin:40rpx 0 0 40rpx;
    color:#777;
}
.original-title{
    color:#1f3463;
    font-size:24rpx;
    font-weight: blod;
    margin-bottom:40rpx;
}
.flex-row{
    display: flex;
    flex-direction: row;
    margin-bottom:10rpx;
}
.mark{
  margin-right:30rpx;
  white-space: normal;
  color:#999;
}
.hr{
    margin-top:45rpx;
    width:100%;
    height:1px;
    background: #d9d9d9;
}
.synopsis{
   display: flex;
   flex-direction: column;
   margin:50rpx 0 0 40rpx;
} 
.summary-content{
    line-height: 40rpx;
    letter-spacing: 1px;
    margin:20rpx 40rpx 0 0;
}
.cast{
   margin:50rpx 0 0 40rpx;
   display: flex;
   flex-direction: column; 
}
/*normal 是换行*/
.casts-container{
    display: inline-flex;
    flex-direction: column;
    margin:0 50rpx 40rpx 0;
    width:170rpx;
    text-align: center;
    white-space: normal;
}
/*禁止换行*/
.cast-imgs{
   white-space: nowrap; 
}
.cast-img{
    width:170rpx;
    height:210rpx;
}
.cast-name{
    margin:10rpx auto 0;
}